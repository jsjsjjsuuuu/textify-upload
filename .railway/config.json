
{
  "$schema": "https://schema.railway.app/railway.schema.json",
  "deploy": {
    "numReplicas": 1,
    "buildCommand": {
      "command": "npm install && VITE_AUTOMATION_SERVER_URL=$RAILWAY_PUBLIC_DOMAIN npx vite build"
    },
    "startCommand": "node src/server/server.js",
    "restartPolicyType": "ON_FAILURE",
    "envs": [
      {
        "key": "NODE_ENV",
        "value": "production"
      },
      {
        "key": "PUPPETEER_SKIP_DOWNLOAD",
        "value": "true"
      },
      {
        "key": "AUTOMATION_SERVER_URL",
        "value": "$RAILWAY_PUBLIC_DOMAIN"
      },
      {
        "key": "VITE_AUTOMATION_SERVER_URL",
        "value": "$RAILWAY_PUBLIC_DOMAIN"
      }
    ]
  }
}
