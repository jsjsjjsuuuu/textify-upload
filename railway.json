
{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && VITE_AUTOMATION_SERVER_URL=$AUTOMATION_SERVER_URL npx vite build"
  },
  "deploy": {
    "startCommand": "PORT=10000 node src/server/server.js",
    "healthcheckPath": "/api/status",
    "healthcheckTimeout": 150,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "envs": [
      {
        "key": "NODE_ENV",
        "value": "production"
      },
      {
        "key": "PORT",
        "value": "10000"
      },
      {
        "key": "PUPPETEER_SKIP_DOWNLOAD",
        "value": "true"
      },
      {
        "key": "AUTOMATION_SERVER_URL",
        "value": "https://textify-upload.up.railway.app"
      },
      {
        "key": "VITE_AUTOMATION_SERVER_URL",
        "value": "https://textify-upload.up.railway.app"
      }
    ]
  }
}
